@model IEnumerable<HRDCManagementSystem.Models.Entities.TrainingRegistration>

@{
    ViewData["Title"] = "My Training Registrations";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h2 class="mb-3">My Training Registrations</h2>
    
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Sr.No.</th>
                        <th>Training Title</th>
                        <th>Trainer</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Venue</th>
                        <th>Mode</th>
                        <th>Registration Status</th>
                        <th>Confirmation Status</th>
                        <th>Registration Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var registration in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@registration.TrainingSys?.Title</td>
                            <td>@registration.TrainingSys?.TrainerName</td>
                            <td>@registration.TrainingSys?.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@registration.TrainingSys?.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@registration.TrainingSys?.Venue</td>
                            <td>@registration.TrainingSys?.Mode</td>
                            <td>
                                @if (registration.Registration)
                                {
                                    <span class="badge bg-success">Registered</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Registered</span>
                                }
                            </td>
                            <td>
                                @if (registration.Confirmation == true)
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else if (registration.Confirmation == false)
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Set</span>
                                }
                            </td>
                            <td>@registration.CreateDateTime?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @{
                                    var currentDate = DateOnly.FromDateTime(DateTime.Now);
                                    var canCancel = registration.TrainingSys?.StartDate > currentDate;
                                }
                                
                                @if (canCancel)
                                {
                                    <form asp-action="Cancel" asp-controller="TrainingRegistration" method="post" class="d-inline">
                                        <input type="hidden" name="registrationId" value="@registration.TrainingRegSysID" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to cancel this registration?')">
                                            <i class="fas fa-times"></i> Cancel
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Cannot cancel</span>
                                }
                                
                                <a asp-action="Details" asp-controller="Training" asp-route-id="@registration.TrainingSysID" 
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> You have not registered for any trainings yet.
        </div>
    }
    
    <div class="mt-3">
        <a asp-action="TrainingIndex" asp-controller="Training" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Trainings
        </a>
    </div>
</div>
