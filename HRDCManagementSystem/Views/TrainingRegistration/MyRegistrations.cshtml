@model IEnumerable<HRDCManagementSystem.Models.Entities.TrainingRegistration>

@{
    ViewData["Title"] = "My Training Registrations";
}

<div class="container mt-4">
    <!-- Success Alert -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <!-- Error Alert -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-octagon-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="bi bi-journal-check me-2"></i> My Training Registrations
            </h2>
            <p class="text-muted mb-0">View and manage your training enrollments</p>
        </div>
        <a asp-action="TrainingIndex" asp-controller="Training" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Trainings
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Trainer</th>
                                <th>Dates</th>
                                <th>Venue</th>
                                <th>Mode</th>
                                <th>Registration</th>
                                <th>Confirmation</th>
                                <th>Registered On</th>
                                <th class="text-center" style="width:180px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var registration in Model)
                            {
                                var canCancel = registration.TrainingSys?.StartDate > DateOnly.FromDateTime(DateTime.Now);
                                <tr>
                                    <td>@counter</td>
                                    <td class="fw-semibold text-primary">@registration.TrainingSys?.Title</td>
                                    <td>@registration.TrainingSys?.TrainerName</td>
                                    <td>
                                        @registration.TrainingSys?.StartDate.ToString("dd MMM yyyy")
                                        <br />
                                        <small class="text-muted">to @registration.TrainingSys?.EndDate.ToString("dd MMM yyyy")</small>
                                    </td>
                                    <td>@registration.TrainingSys?.Venue</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@registration.TrainingSys?.Mode</span>
                                    </td>
                                    <td>
                                        @if (registration.Registration)
                                        {
                                            <span class="badge bg-success">Registered</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Not Registered</span>
                                        }
                                    </td>
                                    <td>
                                        @if (registration.Confirmation == true)
                                        {
                                            <span class="badge bg-success">Confirmed</span>
                                        }
                                        else if (registration.Confirmation == false)
                                        {
                                            <span class="badge bg-warning text-dark">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @registration.CreateDateTime?.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                                            @if (canCancel)
                                            {
                                                <form asp-action="Cancel" asp-controller="TrainingRegistration" method="post" class="d-inline">
                                                    <input type="hidden" name="registrationId" value="@registration.TrainingRegSysID" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                                            onclick="return confirm('Are you sure you want to cancel this registration?')">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Cannot cancel</span>
                                            }

                                            <a asp-action="Details" asp-controller="Training" asp-route-id="@registration.TrainingSysID"
                                               class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2"></i>
            You have not registered for any trainings yet.
        </div>
    }
</div>
