@model IEnumerable<HRDCManagementSystem.Models.ViewModels.TrainingAssessmentViewModel>

@{
    ViewData["Title"] = "Training Assessments";
}

<div class="container mt-4 assessment-page">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="bi bi-clipboard-data me-2"></i> Training Assessments
            </h2>
            <p class="text-muted mb-0">Manage test links, availability, and marks entries for all trainings.</p>
        </div>
        <a asp-controller="Training" asp-action="CreateTraining" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> New Training
        </a>
    </div>

    <!-- Search Bar -->
    <form method="get" class="mb-4">
        <div class="input-group shadow-sm">
            <span class="input-group-text bg-white text-muted">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="search" class="form-control border-start-0" placeholder="Search by training title..." value="@Context.Request.Query["search"]" />
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-funnel"></i> Search
            </button>
        </div>
    </form>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Title</th>
                                <th>Trainer</th>
                                <th>Test Link</th>
                                <th>Available From</th>
                                <th>Available Until</th>
                                <th>Marks Entry</th>
                                <th class="text-center" style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@t.Title</td>
                                    <td>@t.TrainerName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(t.GoogleFormTestLink))
                                        {
                                            <a href="@t.GoogleFormTestLink" target="_blank" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-box-arrow-up-right"></i> Open
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Link</span>
                                        }
                                    </td>
                                    <td>@t.TestAvailableFrom?.ToString("dd MMM yyyy")</td>
                                    <td>@t.TestAvailableUntil?.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (t.IsMarksEntry == true)
                                        {
                                            <span class="badge bg-success">Enabled</span>
                                            <small class="text-muted d-block">Out of @t.MarksOutOf</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Disabled</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (t.IsMarksEntry == true)
                                        {
                                            <a asp-action="ManageMarks" asp-route-id="@t.TrainingSysID" class="btn btn-sm btn-primary shadow-sm">
                                                <i class="bi bi-pencil-square me-1"></i> Enter Marks
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-clipboard-x fs-2 d-block mb-2"></i>
                    No assessments found.
                </div>
            }
        </div>
    </div>
</div>
