@model List<HRDCManagementSystem.Models.ViewModels.HelpQueryViewModel>
@{
    ViewData["Title"] = "Help Queries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-question-circle me-2"></i>Help & Support Queries</h2>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Queries</h5>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("HelpQueries", "Admin")">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Status</label>
                        <select name="status" class="form-select">
                            <option value="all" selected="@(ViewBag.Status == "all" || ViewBag.Status == null)">All</option>
                            <option value="Open" selected="@(ViewBag.Status == "Open")">Open</option>
                            <option value="In Review" selected="@(ViewBag.Status == "In Review")">In Review</option>
                            <option value="Resolved" selected="@(ViewBag.Status == "Resolved")">Resolved</option>
                            <option value="Closed" selected="@(ViewBag.Status == "Closed")">Closed</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Viewed Status</label>
                        <select name="viewed" class="form-select">
                            <option value="" selected="@(ViewBag.Viewed == null)">All</option>
                            <option value="true" selected="@(ViewBag.Viewed == true)">Viewed</option>
                            <option value="false" selected="@(ViewBag.Viewed == false)">Unviewed</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel me-1"></i> Apply Filters
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Query List -->
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Query List</h5>
            <span class="badge bg-light text-primary">@Model.Count Queries</span>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-4 text-center">
                    <i class="bi bi-inbox-fill text-secondary" style="font-size: 3rem;"></i>
                    <p class="mt-3">No help queries found matching the selected filters.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Employee</th>
                                <th>Subject</th>
                                <th>Type</th>
                                <th>Date Submitted</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var query in Model)
                            {
                                <tr class="@(query.ViewedByAdmin ? "" : "table-warning")">
                                    <td>@query.HelpQueryID</td>
                                    <td>@query.EmployeeName</td>
                                    <td>@query.Subject</td>
                                    <td><span class="badge bg-info">@query.QueryType</span></td>
                                    <td>@query.CreateDateTime?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @switch (query.Status)
                                        {
                                            case "Open":
                                                <span class="badge bg-danger">Open</span>
                                                break;
                                            case "In Review":
                                                <span class="badge bg-warning text-dark">In Review</span>
                                                break;
                                            case "Resolved":
                                                <span class="badge bg-success">Resolved</span>
                                                break;
                                            case "Closed":
                                                <span class="badge bg-secondary">Closed</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@query.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#queryModal-@query.HelpQueryID">
                                            <i class="bi bi-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                                
                                <!-- Modal for each query -->
                                <div class="modal fade" id="queryModal-@query.HelpQueryID" tabindex="-1" aria-labelledby="queryModalLabel-@query.HelpQueryID" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="queryModalLabel-@query.HelpQueryID">Query Details</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row mb-4">
                                                    <div class="col-md-6">
                                                        <h6>Submitted By</h6>
                                                        <p class="text-primary mb-0"><strong>@query.Name (@query.Email)</strong></p>
                                                        <p class="text-secondary">Employee: @query.EmployeeName</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h6>Query Information</h6>
                                                        <p><strong>Type:</strong> <span class="badge bg-info">@query.QueryType</span></p>
                                                        <p><strong>Submitted:</strong> @query.CreateDateTime?.ToString("dd/MM/yyyy HH:mm")</p>
                                                    </div>
                                                </div>
                                                <div class="mb-4">
                                                    <h6>Subject</h6>
                                                    <p class="fw-bold">@query.Subject</p>
                                                </div>
                                                <div class="mb-4">
                                                    <h6>Message</h6>
                                                    <div class="p-3 border rounded bg-light">
                                                        @query.Message
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h6>Status</h6>
                                                        <p>
                                                            @switch (query.Status)
                                                            {
                                                                case "Open":
                                                                    <span class="badge bg-danger">Open</span>
                                                                    break;
                                                                case "In Review":
                                                                    <span class="badge bg-warning text-dark">In Review</span>
                                                                    break;
                                                                case "Resolved":
                                                                    <span class="badge bg-success">Resolved</span>
                                                                    break;
                                                                case "Closed":
                                                                    <span class="badge bg-secondary">Closed</span>
                                                                    break;
                                                                default:
                                                                    <span class="badge bg-secondary">@query.Status</span>
                                                                    break;
                                                            }
                                                            @if (query.Status == "Resolved" && query.ResolvedDate.HasValue)
                                                            {
                                                                <span class="ms-2 text-muted">(Resolved on @query.ResolvedDate?.ToString("dd/MM/yyyy HH:mm"))</span>
                                                            }
                                                        </p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h6>Update Status</h6>
                                                        <form asp-action="UpdateQueryStatus" asp-controller="Admin" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@query.HelpQueryID" />
                                                            <div class="input-group">
                                                                <select name="status" class="form-select">
                                                                    <option value="Open" selected="@(query.Status == "Open")">Open</option>
                                                                    <option value="In Review" selected="@(query.Status == "In Review")">In Review</option>
                                                                    <option value="Resolved" selected="@(query.Status == "Resolved")">Resolved</option>
                                                                    <option value="Closed" selected="@(query.Status == "Closed")">Closed</option>
                                                                </select>
                                                                <button class="btn btn-primary" type="submit">Update</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <a href="mailto:@query.Email" class="btn btn-primary">
                                                    <i class="bi bi-envelope"></i> Reply via Email
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }
</style>