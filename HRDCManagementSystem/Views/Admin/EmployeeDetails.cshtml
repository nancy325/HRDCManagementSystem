@model HRDCManagementSystem.Models.Entities.Employee
@{
    ViewData["Title"] = "Employee Details";
}
<div class="container mt-4">
    <h3>Employee Details</h3>
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ProfilePhotoPath))
            {
                <img src="~/images/profilephoto/@Model.ProfilePhotoPath" alt="Profile" width="120" height="120" class="rounded-circle" />
            }
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.FirstName @Model.MiddleName @Model.LastName</dd>
                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@Model.Department</dd>
                <dt class="col-sm-4">Designation</dt>
                <dd class="col-sm-8">@Model.Designation</dd>
                <dt class="col-sm-4">Institute</dt>
                <dd class="col-sm-8">@Model.Institute</dd>
                <dt class="col-sm-4">Type</dt>
                <dd class="col-sm-8">@Model.Type</dd>
                <dt class="col-sm-4">Phone</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>
                <dt class="col-sm-4">Alternate Phone</dt>
                <dd class="col-sm-8">@Model.AlternatePhone</dd>
                <dt class="col-sm-4">Join Date</dt>
                <dd class="col-sm-8">@Model.JoinDate?.ToString("yyyy-MM-dd")</dd>
            </dl>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>