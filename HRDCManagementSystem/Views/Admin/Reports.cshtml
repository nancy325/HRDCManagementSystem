@{
    ViewData["Title"] = "Training Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .report-card {
        border-radius: 10px;
        overflow: hidden;
    }

    .filter-section {
        background: #f8f9fc;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #e2e6ea;
    }

        .filter-section label {
            font-weight: 600;
            color: #444;
        }

    .stat-box {
        background: white;
        border-radius: 12px;
        box-shadow: 0px 2px 8px rgba(0,0,0,0.05);
        transition: transform 0.2s ease;
        border: 1px solid #eef1f5;
    }

        .stat-box:hover {
            transform: translateY(-3px);
        }

        .stat-box h5 {
            font-size: 0.95rem;
            font-weight: 600;
            color: #555;
            margin-bottom: 10px;
        }

    .stat-value {
        font-size: 1.6rem;
        font-weight: 700;
        color: #0d6efd;
    }

    .loader-text {
        font-size: 0.9rem;
        color: #666;
    }

    .card-header h4 {
        font-weight: 700;
        color: #0d6efd;
    }

    .btn-primary i {
        font-size: 1rem;
    }
</style>

<div class="container mt-4">

    <div class="card report-card shadow-sm border-0">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3 px-4 border-bottom">
            <h4 class="mb-0">Training Reports</h4>
            <span class="text-muted small">Filter and analyze training outcomes</span>
        </div>

        <div class="card-body px-4">

            <!-- Filter Section -->
            <div class="filter-section mb-3">
                <form id="filterForm" class="row g-3">

                    <input type="hidden" id="currentTrainingId" name="currentTrainingId" value="" />

                    <div class="col-md-4">
                        <label for="trainingSelect">Training</label>
                        <select id="trainingSelect" name="trainingId" class="form-select shadow-sm">
                            <option value="">-- Select Training --</option>
                            @foreach (var t in ViewBag.Trainings)
                            {
                                <option value="@t.TrainingSysID">@t.Title</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="fromDate">From Date</label>
                        <input type="date" id="fromDate" name="fromDate" class="form-control shadow-sm" />
                    </div>

                    <div class="col-md-3">
                        <label for="toDate">To Date</label>
                        <input type="date" id="toDate" name="toDate" class="form-control shadow-sm" />
                    </div>

                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 shadow-sm">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Loader -->
            <div id="loader" class="text-center my-4 d-none">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="loader-text mt-2">Loading statistics...</p>
            </div>

            <!-- Overall Statistics -->
            <div id="overallStatistics" class="mb-4 d-none">
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="stat-box p-3 text-center">
                            <h5>Total Participants</h5>
                            <div id="totalParticipants" class="stat-value">0</div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="stat-box p-3 text-center">
                            <h5>Average Attendance %</h5>
                            <div id="averageAttendance" class="stat-value">0%</div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="stat-box p-3 text-center">
                            <h5>Average Marks</h5>
                            <div id="averageMarks" class="stat-value">0</div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="stat-box p-3 text-center">
                            <h5>Pass Rate %</h5>
                            <div id="passRate" class="stat-value">0%</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    <script>
        const form = document.getElementById('filterForm');
        const loader = document.getElementById('loader');
        const overallStatistics = document.getElementById('overallStatistics');
        const currentTrainingId = document.getElementById('currentTrainingId');
        const fromDateInput = document.getElementById('fromDate');
        const toDateInput = document.getElementById('toDate');

        async function loadStatistics(trainingId = '', fromDate = '', toDate = '') {
            loader.classList.remove('d-none');
            overallStatistics.classList.add('d-none');

            let params = new URLSearchParams();
            if (trainingId) params.set('trainingId', trainingId);
            if (fromDate) params.set('fromDate', fromDate);
            if (toDate) params.set('toDate', toDate);

            try {
                const url = `/AdminReport/GetOverallStatistics?${params.toString()}`;
                const response = await fetch(url, { method: 'GET' });

                if (!response.ok) throw new Error(`Error ${response.status}`);

                const data = await response.json();

                document.getElementById('totalParticipants').textContent = data.totalParticipants;
                document.getElementById('averageAttendance').textContent = data.averageAttendancePercent + '%';
                document.getElementById('averageMarks').textContent = data.averageMarks;
                document.getElementById('passRate').textContent = data.passRatePercent + '%';

                overallStatistics.classList.remove('d-none');

            } catch (error) {
                alert('Failed to load statistics. Please try again.');
            } finally {
                loader.classList.add('d-none');
            }
        }

        document.addEventListener('DOMContentLoaded', () => loadStatistics());

        form?.addEventListener('submit', (e) => {
            e.preventDefault();
            const trainingId = document.getElementById('trainingSelect').value;
            const fromDate = fromDateInput.value;
            const toDate = toDateInput.value;

            if (trainingId) currentTrainingId.value = trainingId;

            loadStatistics(trainingId, fromDate, toDate);
        });
    </script>
}
