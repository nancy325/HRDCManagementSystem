@{
    ViewData["Title"] = "Training Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Training Reports</h4>
            <small class="text-muted">Filter and manage training results</small>
        </div>

        <div class="card-body">
            <!-- Filter Section -->
            <form id="filterForm" class="row g-3 align-items-end mb-3">
                <!-- Hidden field to store current training ID - THIS IS CRITICAL -->
                <input type="hidden" id="currentTrainingId" name="currentTrainingId" value="" />

                <div class="col-md-4">
                    <label for="trainingSelect" class="form-label fw-semibold">Select Training</label>
                    <select id="trainingSelect" name="trainingId" class="form-select">
                        <option value="">-- Select Training --</option>
                        @foreach (var t in ViewBag.Trainings)
                        {
                            <option value="@t.TrainingSysID">@t.Title</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label for="fromDate" class="form-label fw-semibold">From Date</label>
                    <input type="date" id="fromDate" name="fromDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label for="toDate" class="form-label fw-semibold">To Date</label>
                    <input type="date" id="toDate" name="toDate" class="form-control" />
                </div>

                <div class="col-md-1 text-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>



            <!-- Loader -->
            <div id="loader" class="text-center my-4 d-none">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2 text-muted">Fetching overall statistics...</p>
            </div>

            <!-- Overall Statistics -->
            <div id="overallStatistics" class="mb-4 d-none">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="stat-box p-3 border rounded">
                            <h5>Total Participants</h5>
                            <p id="totalParticipants" class="fs-4 mb-0">0</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box p-3 border rounded">
                            <h5>Average Attendance %</h5>
                            <p id="averageAttendance" class="fs-4 mb-0">0.00%</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box p-3 border rounded">
                            <h5>Average Marks</h5>
                            <p id="averageMarks" class="fs-4 mb-0">0.00</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box p-3 border rounded">
                            <h5>Pass Rate %</h5>
                            <p id="passRate" class="fs-4 mb-0">0.00%</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const form = document.getElementById('filterForm');
        const loader = document.getElementById('loader');
        const overallStatistics = document.getElementById('overallStatistics');
        const currentTrainingId = document.getElementById('currentTrainingId');
        const fromDateInput = document.getElementById('fromDate');
        const toDateInput = document.getElementById('toDate');

        // Function to load statistics
        async function loadStatistics(trainingId = '', fromDate = '', toDate = '') {
            loader.classList.remove('d-none');
            overallStatistics.classList.add('d-none');

            let params = new URLSearchParams();
            if (trainingId) params.set('trainingId', trainingId);
            if (fromDate) params.set('fromDate', fromDate);
            if (toDate) params.set('toDate', toDate);

            try {
                const url = `/AdminReport/GetOverallStatistics?${params.toString()}`;
                const response = await fetch(url, { method: 'GET' });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                document.getElementById('totalParticipants').textContent = data.totalParticipants;
                document.getElementById('averageAttendance').textContent = data.averageAttendancePercent + '%';
                document.getElementById('averageMarks').textContent = data.averageMarks;
                document.getElementById('passRate').textContent = data.passRatePercent + '%';
                overallStatistics.classList.remove('d-none');
            } catch (error) {
                console.error('Error loading statistics:', error);
                alert('Failed to load overall statistics. Please try again.');
            } finally {
                loader.classList.add('d-none');
            }
        }

        // Load default statistics on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadStatistics();
        });

        form?.addEventListener('submit', async (e) => {
            e.preventDefault();
            const trainingId = document.getElementById('trainingSelect').value;
            const fromDate = fromDateInput.value;
            const toDate = toDateInput.value;

            if (trainingId) currentTrainingId.value = trainingId;

            loadStatistics(trainingId, fromDate, toDate);
        });
    </script>
}
