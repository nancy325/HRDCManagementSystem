@using HRDCManagementSystem.Models.Admin
@model List<AdminRegistrationItemViewModel>

@{
    ViewData["Title"] = "Training Registrations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-semibold text-primary mb-1">
                <i class="bi bi-people-fill me-2"></i> Training Registrations
            </h2>
            <p class="text-muted mb-0">View, filter, and manage all training registrations.</p>
        </div>
        <a class="btn btn-outline-secondary" href="@Url.Action("Dashboard", "Admin")">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Dashboard
        </a>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-secondary">Training</label>
                    <select class="form-select shadow-sm" name="trainingId">
                        <option value="">All Trainings</option>
                        @if (ViewBag.TrainingOptions != null)
                        {
                            foreach (var t in ViewBag.TrainingOptions)
                            {
                                <option value="@t.TrainingSysID"
                                        selected="@(ViewBag.TrainingId != null && (int)ViewBag.TrainingId == (int)t.TrainingSysID)">
                                    @t.Title
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-secondary">Start Date</label>
                    <input type="date" class="form-control shadow-sm" name="startDate" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold text-secondary">End Date</label>
                    <input type="date" class="form-control shadow-sm" name="endDate" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold text-secondary">Status</label>
                    <select class="form-select shadow-sm" name="status">
                        <option value="">All</option>
                        <option value="pending" selected="@(ViewBag.Status == "pending")">Pending</option>
                        <option value="approved" selected="@(ViewBag.Status == "approved")">Approved</option>
                        <option value="rejected" selected="@(ViewBag.Status == "rejected")">Rejected</option>
                    </select>
                </div>

                <div class="col-12 d-flex flex-wrap gap-2 mt-2">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="bi bi-funnel me-1"></i> Apply Filters
                    </button>
                    <a href="@Url.Action("Registrations", "Admin")" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-clockwise me-1"></i> Reset
                    </a>
                    <a class="btn btn-outline-primary shadow-sm"
                       href="@Url.Action("ExportRegistrationsCsv", "Admin", new { trainingId = ViewBag.TrainingId, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate, status = ViewBag.Status })">
                        <i class="bi bi-filetype-csv me-1"></i> Export CSV
                    </a>
                    <a class="btn btn-outline-dark shadow-sm"
                       target="_blank"
                       href="@Url.Action("PrintRegistrations", "Admin", new { trainingId = ViewBag.TrainingId, startDate = ViewBag.StartDate, endDate = ViewBag.EndDate, status = ViewBag.Status })">
                        <i class="bi bi-printer me-1"></i> Print / PDF
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Registrations Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-end mb-3">
                <button type="button" id="approveAllBtn" class="btn btn-success btn-sm shadow-sm" onclick="approveAllPending()">
                    <i class="bi bi-check2-all me-1"></i> Approve All Pending
                </button>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Sr.No.</th>
                            <th>Training</th>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Registered On</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            var i = 1;
                            foreach (var r in Model)
                            {
                                bool isTrainingCompleted = (r.TrainingStatus != null && r.TrainingStatus.ToLower() == "completed");
                                var statusText = r.Confirmation == null ? "pending" : (r.Confirmation == true ? "approved" : "rejected");

                                <tr data-reg-id="@r.TrainingRegSysID" data-is-completed="@isTrainingCompleted.ToString().ToLower()" data-status="@statusText">
                                    <td>@i</td>
                                    <td class="fw-semibold">@r.TrainingTitle</td>
                                    <td>@r.EmployeeName</td>
                                    <td>@r.Department</td>
                                    <td>@r.RegistrationDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (r.Confirmation == true)
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (r.Confirmation == null)
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <form asp-action="Approve" asp-controller="TrainingRegistration" method="post" onsubmit="return handleApprovalAjax(this, 'approve', @isTrainingCompleted.ToString().ToLower());">
                                                <input type="hidden" name="id" value="@r.TrainingRegSysID" />
                                                <button type="submit" class="btn btn-success btn-sm shadow-sm"
                                                        @(r.Confirmation != null || isTrainingCompleted ? "disabled" : null)>
                                                    <i class="bi bi-check-circle me-1"></i> Approve
                                                </button>
                                            </form>
                                            <form asp-action="Reject" asp-controller="TrainingRegistration" method="post" onsubmit="return handleApprovalAjax(this, 'reject', @isTrainingCompleted.ToString().ToLower());">
                                                <input type="hidden" name="id" value="@r.TrainingRegSysID" />
                                                <button type="submit" class="btn btn-danger btn-sm shadow-sm"
                                                        @(r.Confirmation != null || isTrainingCompleted ? "disabled" : null)>
                                                    <i class="bi bi-x-circle me-1"></i> Reject
                                                </button>
                                            </form>
                                        </div>
                                        @if (isTrainingCompleted)
                                        {
                                            <div class="text-danger small mt-1">
                                                <i class="bi bi-exclamation-triangle"></i> Training completed
                                            </div>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="bi bi-info-circle me-1"></i> No registrations found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function handleApprovalAjax(form, action, isCompleted) {
            if (isCompleted) {
                alert(`Training is completed. You cannot ${action}.`);
                return false;
            }
            try {
                const submitBtn = form.querySelector('button');
                submitBtn.disabled = true;

                const regId = form.querySelector('input[name="id"]').value;
                const response = await fetch('/TrainingRegistration/HandleApproval', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ registrationId: regId, action })
                });
                const data = await response.json();

                if (data && data.success) {
                    const row = form.closest('tr');
                    const statusCell = row.querySelector('td:nth-child(6)');
                    statusCell.innerHTML = action === 'approve'
                        ? '<span class="badge bg-success">Approved</span>'
                        : '<span class="badge bg-danger">Rejected</span>';
                    // Disable both buttons after status is set
                    row.querySelectorAll('button[type="submit"]').forEach(b => b.disabled = true);
                    // Update row data-status attribute
                    row.setAttribute('data-status', action === 'approve' ? 'approved' : 'rejected');
                } else {
                    alert(data.message || 'Action failed.');
                    submitBtn.disabled = false;
                }
            } catch {
                alert('An unexpected error occurred.');
            }
            return false;
        }

        async function approveAllPending() {
            const rows = [...document.querySelectorAll('tr[data-reg-id]')].filter(r =>
                r.dataset.isCompleted === 'false' && r.dataset.status === 'pending');
            if (rows.length === 0) {
                alert('No pending registrations to approve.');
                return;
            }
            if (!confirm(`Approve all pending registrations (${rows.length})?`)) return;

            for (const row of rows) {
                const regId = row.dataset.regId;
                await fetch('/TrainingRegistration/HandleApproval', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ registrationId: regId, action: 'approve' })
                });
            }
            alert('All pending registrations approved!');
            location.reload();
        }
    </script>
}
