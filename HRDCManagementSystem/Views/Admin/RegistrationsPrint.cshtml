@model List<HRDCManagementSystem.Models.Admin.AdminRegistrationItemViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Registrations - Print</title>
    <style>
        body { font-family: Arial, Helvetica, sans-serif; }
        h2 { margin: 0 0 12px 0; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ccc; padding: 8px; font-size: 12px; }
        th { background: #f2f2f2; text-align: left; }
        .meta { margin-bottom: 10px; font-size: 12px; color: #555; }
    </style>
    <script>
        window.onload = function () { window.print(); }
    </script>
    </head>
<body>
    <h2>Training Registrations</h2>
    <div class="meta">Generated at: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
    <table>
        <thead>
            <tr>
                <th>Training</th>
                <th>Employee</th>
                <th>Department</th>
                <th>Registered On</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var r in Model)
            {
                var statusText = r.Confirmation == null ? "Pending" : (r.Confirmation == true ? "Approved" : "Rejected");
                <tr>
                    <td>@r.TrainingTitle</td>
                    <td>@r.EmployeeName</td>
                    <td>@r.Department</td>
                    <td>@(r.RegistrationDate.ToString("dd/MM/yyyy HH:mm"))</td>
                    <td>@statusText</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">No registrations found.</td></tr>
        }
        </tbody>
    </table>
</body>
</html>


