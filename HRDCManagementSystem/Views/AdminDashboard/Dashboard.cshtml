@using HRDCManagementSystem.Models.Admin
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="mb-4">Admin Dashboard</h2>

    <!-- Metrics -->
    <div class="row g-3 mb-4">
        <div class="col-md-3"><div class="card p-3"><div class="text-muted">Total Participants</div><div class="h4">@Model.TotalParticipants</div></div></div>
        <div class="col-md-3"><div class="card p-3"><div class="text-muted">Trainings Conducted</div><div class="h4">@Model.TrainingsConducted</div></div></div>
        <div class="col-md-3"><div class="card p-3"><div class="text-muted">Pending Approvals</div><div class="h4">@Model.PendingApprovals</div></div></div>
        <div class="col-md-3"><div class="card p-3"><div class="text-muted">Avg. Feedback Score</div><div class="h4">@Model.FeedbackScore</div></div></div>
    </div>

    <!-- Upcoming Trainings -->
    <div class="card p-3">
        <h5>Upcoming Trainings</h5>
        <table class="table table-sm">
            <thead><tr><th>Title</th><th>Date</th><th>Registered</th></tr></thead>
            <tbody>
                @foreach (var t in Model.UpcomingTrainings)
                {
                    <tr>
                        <td>@t.Title</td>
                        <td>@t.Date.ToString("dd MMM yyyy")</td>
                        <td>@t.Registered</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
