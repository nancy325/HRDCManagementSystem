@model HRDCManagementSystem.Models.ViewModels.TrainingCertificatesViewModel

@{
    ViewData["Title"] = "Training Certificates";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-award me-2"></i> Certificates for @Model.TrainingTitle
                    </h5>
                    <form asp-action="GenerateAllCertificates" asp-route-trainingId="@Model.TrainingSysID" method="post">
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-file-earmark-pdf me-1"></i> Generate All Certificates
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            @TempData["WarningMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="mb-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">Training Details</h6>
                                <dl class="row mb-0">
                                    <dt class="col-sm-3">Training:</dt>
                                    <dd class="col-sm-9">@Model.TrainingTitle</dd>
                                    
                                    <dt class="col-sm-3">Duration:</dt>
                                    <dd class="col-sm-9">@Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")</dd>
                                    
                                    <dt class="col-sm-3">Participants:</dt>
                                    <dd class="col-sm-9">@Model.Registrations.Count</dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" id="participantSearch" class="form-control" placeholder="Search for participants...">
                            </div>
                        </div>
                    </div>

                    @if (Model.Registrations.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Employee Name</th>
                                        <th>Department</th>
                                        <th>Designation</th>
                                        <th>Certificate Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reg in Model.Registrations)
                                    {
                                        <tr>
                                            <td>@reg.EmployeeName</td>
                                            <td>@reg.Department</td>
                                            <td>@reg.Designation</td>
                                            <td>
                                                @if (reg.HasCertificate)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i> Generated on @reg.IssueDate?.ToString("dd MMM yyyy")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-exclamation-circle me-1"></i> Not Generated
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (reg.HasCertificate)
                                                {
                                                    <div class="btn-group">
                                                        <form asp-action="GenerateCertificate" asp-route-trainingRegId="@reg.TrainingRegSysID" method="post">
                                                            <button type="submit" class="btn btn-sm btn-outline-primary me-2" title="Regenerate Certificate">
                                                                <i class="bi bi-arrow-repeat"></i> Regenerate
                                                            </button>
                                                        </form>
                                                        <a href="@reg.CertificatePath" target="_blank" class="btn btn-sm btn-primary" title="Download Certificate">
                                                            <i class="bi bi-download"></i> Download
                                                        </a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <form asp-action="GenerateCertificate" asp-route-trainingRegId="@reg.TrainingRegSysID" method="post">
                                                        <button type="submit" class="btn btn-sm btn-success" title="Generate Certificate">
                                                            <i class="bi bi-file-earmark-pdf me-1"></i> Generate Certificate
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i> No confirmed participants found for this training.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#participantSearch').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}