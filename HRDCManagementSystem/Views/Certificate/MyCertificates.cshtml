@model List<HRDCManagementSystem.Models.ViewModels.MyCertificateViewModel>

@{
    ViewData["Title"] = "My Certificates";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-award me-2"></i> My Training Certificates
                    </h5>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="row mb-3">
                            <div class="col">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" id="certificateSearch" class="form-control" placeholder="Search for certificates...">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            @foreach (var cert in Model)
                            {
                                <div class="col certificate-card">
                                    <div class="card h-100">
                                        <div class="card-header bg-light">
                                            <h5 class="card-title mb-0 text-primary">@cert.TrainingTitle</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="d-flex flex-column h-100">
                                                <div class="mb-3">
                                                    <p class="text-muted mb-1">Training Duration</p>
                                                    <p>@cert.StartDate.ToString("dd MMM yyyy") - @cert.EndDate.ToString("dd MMM yyyy")</p>
                                                </div>
                                                <div class="mb-3">
                                                    <p class="text-muted mb-1">Issue Date</p>
                                                    <p>@cert.IssueDate.ToString("dd MMMM yyyy")</p>
                                                </div>
                                                <div class="mt-auto">
                                                    <a asp-action="Download" asp-route-id="@cert.CertificateSysID" class="btn btn-primary w-100">
                                                        <i class="bi bi-download me-2"></i> Download Certificate
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-award text-muted" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">No Certificates Available</h4>
                            <p class="text-muted">You don't have any training certificates yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#certificateSearch').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('.certificate-card').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}