@model HRDCManagementSystem.Models.ViewModels.TrainingViewModel

@{
    ViewData["Title"] = "Training Details";
}

<!-- 🌟 Hero Banner -->
<section class="training-banner text-white p-4 p-md-5 rounded-4 shadow-lg mb-4" style="background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
        <div>
            <h1 class="fw-bold display-5 mb-2 text-white">
                <i class="bi bi-mortarboard-fill me-2"></i>@Model.Title
            </h1>
            <p class="fs-5 mb-0 opacity-75">
                <i class="bi bi-person-workspace me-2"></i>
                <strong>@Model.TrainerName</strong>
            </p>
        </div>

        <div class="mt-4 mt-md-0 d-flex flex-wrap gap-2">
            <a asp-action="TrainingIndex" class="btn btn-outline-light btn-lg shadow-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="EditTraining" asp-route-id="@Model.TrainingSysID"
                   class="btn btn-warning btn-lg shadow-sm text-dark fw-semibold">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
            }
        </div>
    </div>

    <!-- 📅 Date Badges -->
    <div class="mt-4 d-flex flex-wrap gap-2">
        <span class="badge bg-white text-dark px-4 py-2 fs-6 shadow-sm">
            <i class="bi bi-calendar-event me-1"></i>
            @Model.StartDate.ToString("dd MMM") – @Model.EndDate.ToString("dd MMM yyyy")
        </span>
        <span class="badge bg-info text-white px-4 py-2 fs-6 shadow-sm">
            <i class="bi bi-clock-history me-1"></i>@Model.FromTime – @Model.ToTime
        </span>
        <span class="badge bg-success px-4 py-2 fs-6 shadow-sm">
            <i class="bi bi-geo-alt me-1"></i>@Model.Mode
        </span>
    </div>
</section>

<div class="container">

    <!-- 🔔 Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-octagon-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- 🧾 Training Info -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
        <div class="card-header text-white fw-semibold py-3" style="background: linear-gradient(135deg, #6c757d 0%, #495057 100%);">
            <i class="bi bi-info-circle me-2"></i> Training Information
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="info-box">
                        <div class="small text-muted">Venue</div>
                        <div class="fw-semibold fs-6">@Model.Venue</div>
                    </div>
                    <div class="info-box">
                        <div class="small text-muted">Registration Valid Till</div>
                        <div class="fw-semibold fs-6">
                            @if (Model.ValidTill.HasValue)
                            {
                                @Model.ValidTill.Value.ToString("dd MMM yyyy")
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </div>
                    </div>
                    <div class="info-box">
                        <div class="small text-muted">Capacity</div>
                        <span class="badge bg-info text-white px-3 py-2">
                            @ViewBag.CurrentRegistrations / @Model.Capacity
                        </span>
                    </div>
                </div>

                <div class="col-md-6">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="info-box">
                            <div class="small text-muted">Status</div>
                            <span class="badge @(Model.Status?.ToLower() == "published" ? "bg-success" : "bg-secondary") px-3 py-2">
                                @Model.Status
                            </span>
                        </div>
                    }
                    <div class="info-box">
                        <div class="small text-muted">Attachment</div>
                        @if (!string.IsNullOrEmpty(Model.ExistingPath))
                        {
                            <a href="@Url.Content(Model.ExistingPath)" target="_blank" class="btn btn-outline-primary btn-sm mt-1">
                                <i class="bi bi-file-earmark-arrow-down me-1"></i> View File
                            </a>
                        }
                        else
                        {
                            <span class="text-muted small">No file uploaded</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 🧍 Registration Section -->
    @if (User.IsInRole("Employee"))
    {
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body">
                @if (ViewBag.IsRegistered == true)
                {
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2"></i> You are already registered for this training.
                    </div>
                }
                else
                {
                    var currentDate = DateOnly.FromDateTime(DateTime.Now);
                    var canRegister = (!Model.ValidTill.HasValue) || (Model.ValidTill >= currentDate);
                    var hasCapacity = (ViewBag.CurrentRegistrations < Model.Capacity);

                    if (canRegister && hasCapacity)
                    {
                        <form asp-action="Register" asp-controller="TrainingRegistration" method="post">
                            <input type="hidden" name="trainingId" value="@Model.TrainingSysID" />
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-person-plus-fill me-1"></i> Register Now
                            </button>
                        </form>
                    }
                    else if (!canRegister)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-clock-history me-2"></i> Registration period has expired.
                        </div>
                    }
                    else if (!hasCapacity)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-people-fill me-2"></i> This training is full.
                        </div>
                    }
                }
            </div>
        </div>
    }

    <!-- 👥 Registered Employees -->
    @if (User.IsInRole("Admin"))
    {
        <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header text-white fw-semibold d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, #6c757d 0%, #495057 100%);">
            <span><i class="bi bi-people-fill me-2"></i> Registered Employees</span>
            <div>
                @{
                    var currentDate = DateOnly.FromDateTime(DateTime.Now);
                    var isTrainingCompleted = Model.EndDate < currentDate;
                    
                    if (isTrainingCompleted)
                    {
                        <a asp-controller="Certificate" asp-action="TrainingCertificates" asp-route-trainingId="@Model.TrainingSysID"
                           class="btn btn-success btn-sm me-2">
                            <i class="bi bi-award me-1"></i> Certificates
                        </a>
                    }
                }
                <a asp-controller="Feedback" asp-action="ViewFeedback" asp-route-trainingSysId="@Model.TrainingSysID"
                   class="btn btn-outline-light btn-sm">
                    <i class="bi bi-chat-dots me-1"></i> Feedback
                </a>
            </div>
        </div>
            <div class="card-body">
                @{
                    var regs = ViewBag.RegisteredEmployees as IEnumerable<dynamic>;
                }

                @if (regs != null && regs.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>Status</th>
                                    <th>Registered On</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var e in regs)
                                {
                                    <tr>
                                        <td>@e.Name</td>
                                        <td>@e.Department</td>
                                        <td>
                                            @if (e.Confirmation == true)
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                        </td>
                                        <td>@(((DateTime)e.RegisteredOn).ToString("dd/MM/yyyy HH:mm"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-light text-muted">
                        <i class="bi bi-info-circle me-1"></i> No registrations yet.
                    </div>
                }
            </div>
        </div>
    }
</div>
