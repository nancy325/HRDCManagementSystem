@model HRDCManagementSystem.Models.Entities.Employee
@{
    ViewData["Title"] = "Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 employee-detail-page">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary employee-detail-title">
                <i class="bi bi-person-vcard me-2"></i> Employee Details
            </h2>
            <p class="text-muted mb-0">Detailed profile information of the employee.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary back-btn">
            <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>
    </div>

    <!-- Employee Card -->
    <div class="card shadow-sm border-0 p-4 employee-card">
        <div class="row g-4 align-items-start">
            <!-- Profile Section -->
            <div class="col-md-4 text-center profile-section border-end">
                @if (!string.IsNullOrEmpty(Model.ProfilePhotoPath))
                {
                    <img src="~/images/profilephoto/@Model.ProfilePhotoPath"
                         alt="Profile Photo"
                         class="rounded-circle shadow-sm border mb-3 employee-photo" />
                }
                else
                {
                    <div class="bg-gradient-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm mb-3 employee-photo">
                        <i class="bi bi-person fs-1"></i>
                    </div>
                }

                <h3 class="fw-bold mb-0 employee-name">@Model.FirstName @Model.MiddleName @Model.LastName</h3>
                <div class="text-muted employee-role">@Model.Designation</div>

                <div class="mt-3">
                    @if (!string.IsNullOrEmpty(Model.Department))
                    {
                        <span class="badge bg-primary me-1">@Model.Department</span>
                    }
                    @if (!string.IsNullOrEmpty(Model.Type))
                    {
                        <span class="badge bg-light text-dark border">@Model.Type</span>
                    }
                </div>
            </div>

            <!-- Details Section -->
            <div class="col-md-8">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="text-muted small">Institute</span>
                            <div class="fw-semibold">@Model.Institute</div>
                        </div>
                        <div class="info-box">
                            <span class="text-muted small">Phone</span>
                            <div class="fw-semibold">@Model.PhoneNumber</div>
                        </div>
                        <div class="info-box">
                            <span class="text-muted small">Alternate Phone</span>
                            <div class="fw-semibold">
                                @(string.IsNullOrEmpty(Model.AlternatePhone) ? "—" : Model.AlternatePhone)
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="text-muted small">Join Date</span>
                            <div class="fw-semibold">@Model.JoinDate?.ToString("dd MMM yyyy")</div>
                        </div>
                        <div class="info-box">
                            <span class="text-muted small">Status</span>
                            <div class="fw-semibold">
                                <span class="badge bg-success">Active</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary back-btn">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
