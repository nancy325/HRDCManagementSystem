@model HRDCManagementSystem.Models.Entities.Employee
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePhotoPath))
                    {
                        <img src="~/images/profilephoto/@Model.ProfilePhotoPath" alt="Profile" class="img-fluid rounded-circle profile-image mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 150px; height: 150px;">
                            <i class="bi bi-person" style="font-size: 80px;"></i>
                        </div>
                    }
                    <h3 class="mb-1">@Model.FirstName @Model.LastName</h3>
                    <p class="text-muted">@Model.Designation</p>
                    <a href="@Url.Action("EditProfile", "Employee")" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Profile Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @Model.FirstName @Model.MiddleName @Model.LastName
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @(Model.UserSys?.Email ?? "N/A")
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Department</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @Model.Department
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Designation</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @Model.Designation
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Institute</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @Model.Institute
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Phone</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @Model.PhoneNumber
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Alternative Phone</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @(Model.AlternatePhone ?? "N/A")
                        </div>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Join Date</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">
                            @(Model.JoinDate?.ToString("dd/MM/yyyy") ?? "N/A")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>