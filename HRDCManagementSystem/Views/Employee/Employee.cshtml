@model IEnumerable<HRDCManagementSystem.Models.Entities.Employee>
@{
    ViewData["Title"] = "Employee Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header mb-4">
    <h2 class="fw-semibold text-primary">
        <i class="bi bi-people-fill me-2"></i> Employee Management
    </h2>
    <p class="text-muted">Manage all employees, view details, and send login credentials.</p>
</div>

<!-- ✅ Success & Info Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>

        @if (TempData["EmailSent"] is bool emailSent)
        {
            <div class="mt-2">
                @if (emailSent)
                {
                    <div class="alert alert-info py-2 mb-0">
                        <i class="bi bi-envelope-check me-1"></i> A welcome email with login details was sent successfully.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning py-2 mb-0">
                        <i class="bi bi-envelope-exclamation me-1"></i> Failed to send email: @TempData["EmailError"]
                    </div>
                }
            </div>
        }

        @if (TempData["NewEmployeeEmail"] != null && TempData["NewEmployeePassword"] != null)
        {
            <div class="mt-3 bg-light border rounded p-3">
                <h6 class="fw-semibold mb-2 text-primary">
                    <i class="bi bi-key me-1"></i> New Employee Login Credentials
                </h6>
                <div class="row small">
                    <div class="col-md-6 mb-1">
                        <strong>Email:</strong> @TempData["NewEmployeeEmail"]
                    </div>
                    <div class="col-md-6 mb-1">
                        <strong>Password:</strong> @TempData["NewEmployeePassword"]
                    </div>
                </div>
                <p class="small text-muted mb-0">
                    <i class="bi bi-info-circle me-1"></i> Share manually if email delivery failed.
                </p>
            </div>
        }
    </div>
}

<!-- ➕ Add Employee Button -->
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-person-plus me-1"></i> Add New Employee
    </a>
</div>

<!-- 📋 Employee Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Photo</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Department</th>
                        <th scope="col">Designation</th>
                        <th scope="col">Institute</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(emp.ProfilePhotoPath))
                                {
                                    <img src="~/images/profilephoto/@emp.ProfilePhotoPath"
                                         alt="Profile"
                                         class="rounded-circle border shadow-sm"
                                         style="width: 50px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center border"
                                         style="width: 50px; height: 50px;">
                                        <i class="bi bi-person text-secondary fs-5"></i>
                                    </div>
                                }
                            </td>
                            <td class="fw-semibold">@emp.FirstName @emp.MiddleName @emp.LastName</td>
                            <td>@(emp.UserSys?.Email ?? "N/A")</td>
                            <td>@emp.Department</td>
                            <td>@emp.Designation</td>
                            <td>@emp.Institute</td>
                            <td class="text-end">
                                <!-- Edit -->
                                <a asp-action="Edit" asp-route-id="@emp.EmployeeSysID" class="btn btn-outline-primary btn-sm me-1" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <!-- Details -->
                                <a asp-action="Details" asp-route-id="@emp.EmployeeSysID" class="btn btn-outline-info btn-sm me-1" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <!-- Delete -->
                                <a asp-action="Delete" asp-route-id="@emp.EmployeeSysID"
                                   class="btn btn-outline-danger btn-sm me-1"
                                   onclick="return confirm('Are you sure you want to delete this employee?');"
                                   title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>

                                <!-- Resend Mail -->
                                <form asp-action="ResendCredentials" asp-route-id="@emp.EmployeeSysID" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-warning btn-sm"
                                            title="Resend Credentials"
                                            onclick="return confirm('Resend credentials to this employee?');">
                                        <i class="bi bi-envelope"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- 📬 Modal for credentials -->
@if (TempData["NewEmployeeEmail"] != null && TempData["NewEmployeePassword"] != null)
{
    <div class="modal fade" id="credentialsModal" tabindex="-1" aria-labelledby="credentialsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="credentialsModalLabel">
                        <i class="bi bi-person-check me-1"></i> Employee Created Successfully
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="fw-semibold text-dark mb-3">
                        Please save these credentials before closing:
                    </p>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="emailInput" value="@TempData["NewEmployeeEmail"]" readonly>
                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('emailInput')">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="passwordInput" value="@TempData["NewEmployeePassword"]" readonly>
                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard('passwordInput')">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                    @if (TempData["EmailSent"] is bool emailSent)
                    {
                        if (emailSent)
                        {
                            <div class="alert alert-success py-2">
                                <i class="bi bi-envelope-check me-1"></i> Email sent successfully.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger py-2">
                                <i class="bi bi-envelope-x me-1"></i> Failed to send email. Share credentials manually.
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var modal = new bootstrap.Modal(document.getElementById('credentialsModal'));
            modal.show();
        });

        function copyToClipboard(id) {
            const input = document.getElementById(id);
            input.select();
            navigator.clipboard.writeText(input.value);
            const btn = input.nextElementSibling;
            const original = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check"></i> Copied';
            btn.classList.add('btn-success');
            setTimeout(() => {
                btn.innerHTML = original;
                btn.classList.remove('btn-success');
            }, 2000);
        }
    </script>
}
