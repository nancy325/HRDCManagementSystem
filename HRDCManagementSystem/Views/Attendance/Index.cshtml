@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Mark Attendance - Active Trainings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Active Trainings</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Title</td>
            <td>@t.StartDate.ToString("yyyy-MM-dd")</td>
            <td>@t.EndDate.ToString("yyyy-MM-dd")</td>
            <td>@t.Status</td>
            <td>
                <a class="btn btn-primary" asp-action="Mark" asp-route-trainingId="@t.TrainingSysID">Mark Attendance</a>
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="ExportCsv" asp-route-trainingId="@t.TrainingSysID">Export CSV</a>
            </td>
        </tr>
    }
    </tbody>
    </table>


