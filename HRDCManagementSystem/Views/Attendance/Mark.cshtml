@model HRDCManagementSystem.Models.ViewModels.AttendanceMarkViewModel
@{
    ViewData["Title"] = "Mark Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mark Attendance - @Model.TrainingTitle (@Model.AttendanceDate)</h2>

@if (TempData["ErrorMessage"] != null && !(Model?.IsAlreadyTaken ?? false))
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (Model.IsAlreadyTaken)
{
    <div class="alert alert-warning">Attendance is already taken for this training/date. You can export below.</div>
}

<form asp-action="Mark" method="post" onsubmit="return confirmSave()">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="TrainingSysID" />

    <div class="mb-3">
        <label asp-for="AttendanceDate" class="form-label"></label>
        <input asp-for="AttendanceDate" class="form-control" type="date" disabled="@(Model.IsAlreadyTaken ? "disabled" : null)" />
        <span asp-validation-for="AttendanceDate" class="text-danger"></span>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Present</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Items[i].EmployeeName
                        <input type="hidden" name="Items[@i].TrainingRegSysID" value="@Model.Items[i].TrainingRegSysID" />
                        <input type="hidden" name="Items[@i].EmployeeSysID" value="@Model.Items[i].EmployeeSysID" />
                        <input type="hidden" name="Items[@i].EmployeeName" value="@Model.Items[i].EmployeeName" />
                    </td>
                    <td>
                        <input type="hidden" name="Items[@i].IsPresent" value="false" />
                        <input class="form-check-input" name="Items[@i].IsPresent" type="checkbox" value="true" @(Model.Items[i].IsPresent ? "checked" : "") @(Model.IsAlreadyTaken ? "disabled=\"disabled\"" : "") />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success" @(Model.IsAlreadyTaken ? "disabled=\"disabled\"" : "")>Save Attendance</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    <a asp-action="ExportCsv" asp-route-trainingId="@Model.TrainingSysID" asp-route-date="@Model.AttendanceDate" class="btn btn-outline-primary">Export CSV</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function confirmSave() {
            if (@(Model.IsAlreadyTaken.ToString().ToLowerInvariant())) {
                return false;
            }
            return confirm('Are you sure you want to save the attendance?');
        }
    </script>
}