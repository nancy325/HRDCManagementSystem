@model HRDCManagementSystem.Models.ViewModels.UserSettingsViewModel
@{
    ViewData["Title"] = "User Settings";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-gear me-2"></i>Account Settings</h2>

    <!-- Success and Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Web Notifications Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-bell me-2"></i>Web Notification Settings</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <p class="text-muted">
                            Web notifications allow you to receive in-app alerts for important events such as:
                        </p>
                        <ul class="text-muted small">
                            <li>Certificate generation</li>
                            <li>Training registration approvals/rejections</li>
                            <li>Training reminders</li>
                            <li>Other system notifications</li>
                        </ul>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="notificationToggle" 
                               @(Model.NotificationSettings.IsWebNotificationEnabled ? "checked" : "")>
                        <label class="form-check-label" for="notificationToggle">Enable Web Notifications</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Change Password Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lock me-2"></i>Change Password</h5>
                </div>
                <div class="card-body">
                    <form id="passwordForm" method="post">
                        <div class="mb-3">
                            <label asp-for="ChangePassword.NewPassword" class="form-label">New Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-key"></i></span>
                                <input asp-for="ChangePassword.NewPassword" class="form-control" type="password" />
                            </div>
                            <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
                            <div class="form-text">Password must be at least 6 characters long.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ChangePassword.ConfirmPassword" class="form-label">Confirm Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-key-fill"></i></span>
                                <input asp-for="ChangePassword.ConfirmPassword" class="form-control" type="password" />
                            </div>
                            <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" id="changePasswordBtn" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Change Password
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-3">
        <i class="bi bi-info-circle-fill me-2"></i>
        Settings are saved automatically. You can access these settings anytime from the sidebar or profile menu.
    </div>
</div>

@section Scripts {
    <script>
        // Web Notification Toggle
        $(document).ready(function () {
            $("#notificationToggle").change(function () {
                const isEnabled = $(this).is(":checked");
                
                $.ajax({
                    url: '@Url.Action("UpdateWebNotification", "Account")',
                    type: 'POST',
                    data: { enabled: isEnabled },
                    headers: {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            // Show toast notification
                            showToast(response.message, 'success');
                            
                            // Store setting in localStorage for frontend use
                            localStorage.setItem('webNotificationsEnabled', isEnabled);
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function () {
                        showToast('Failed to update notification settings', 'error');
                    }
                });
            });

            // Password change form
            $("#passwordForm").submit(function (e) {
                e.preventDefault();
                
                const newPassword = $("#ChangePassword_NewPassword").val();
                const confirmPassword = $("#ChangePassword_ConfirmPassword").val();
                
                // Basic validation
                if (newPassword.length < 6) {
                    showToast('Password must be at least 6 characters long', 'error');
                    return;
                }
                
                if (newPassword !== confirmPassword) {
                    showToast('Passwords do not match', 'error');
                    return;
                }
                
                $.ajax({
                    url: '@Url.Action("UpdatePassword", "Account")',
                    type: 'POST',
                    data: { 
                        NewPassword: newPassword,
                        ConfirmPassword: confirmPassword
                    },
                    headers: {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            // Show success message
                            showToast(response.message, 'success');
                            // Clear form
                            $("#passwordForm")[0].reset();
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function () {
                        showToast('Failed to update password', 'error');
                    }
                });
            });
        });

        // Helper function to show toast notifications
        function showToast(message, type) {
            const toastHtml = `
                <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                    <div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body">
                                <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                                ${message}
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            `;
            
            // Append toast to body
            $('body').append(toastHtml);
            
            // Initialize and show the toast
            const toastElement = document.querySelector('.toast');
            const toast = new bootstrap.Toast(toastElement, { delay: 3000 });
            toast.show();
            
            // Remove toast from DOM after it's hidden
            toastElement.addEventListener('hidden.bs.toast', function () {
                $(this).parent().remove();
            });
        }
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}