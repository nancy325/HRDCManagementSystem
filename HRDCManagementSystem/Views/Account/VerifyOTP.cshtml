@model HRDCManagementSystem.Models.ViewModels.VerifyOTPViewModel
@{
    Layout = null;
    ViewData["Title"] = "Verify OTP - HRDC";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body { background: linear-gradient(120deg, #5c9ded, #003366); height: 100vh; }
        .otp-card { width: 420px; border-radius: 15px; }
        .logo-img { max-width: 120px; margin-bottom: 10px; }
        .form-control { height: 45px; }
        .input-group-text { background: #fff; border-right: 0; }
        .input-group .form-control { border-left: 0; }
        .btn-primary { background-color: #0d6efd; border: none; }
        .btn-primary:hover { background-color: #0b5ed7; }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 otp-card">

            <div class="text-center mb-3">
                <img src="~/images/hrdc-logo.png" alt="HRDC Logo" class="logo-img" />
                <h5 class="fw-bold text-primary">Verify Your Identity</h5>
                <p class="text-muted mb-0">Enter the OTP sent to your email</p>
            </div>
            <hr class="mb-3" />

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <form asp-action="VerifyOTP" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Email address" readonly="@(!string.IsNullOrEmpty(Model.Email))" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                        <input asp-for="OTP" class="form-control" placeholder="Enter 6-digit OTP" autocomplete="off" />
                    </div>
                    <span asp-validation-for="OTP" class="text-danger"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary fw-bold">
                        <i class="bi bi-check-circle"></i> Verify OTP
                    </button>
                </div>
            </form>

            <div class="text-center">
                <p class="mb-2">Didn't receive the OTP?</p>
                <form asp-action="ResendOTP" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="email" value="@Model.Email" />
                    <button type="submit" class="btn btn-link p-0">Resend OTP</button>
                </form>
            </div>

            <hr class="my-3" />
            <div class="text-center">
                <a asp-action="Login" class="text-decoration-none">Back to Login</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>