@model HRDCManagementSystem.Models.ViewModels.FeedbackSubmissionViewModel

@{
    ViewData["Title"] = "View My Feedback";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">My Feedback: @Model.TrainingTitle</h5>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    @foreach (var response in Model.Responses)
                    {
                        <div class="card mb-4 border-light">
                            <div class="card-body">
                                <h6 class="card-title mb-3">@response.QuestionText</h6>
                                
                                @if (response.QuestionType == "Rating")
                                {
                                    <div class="mb-2">
                                        <div class="stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= response.RatingValue)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-warning"></i>
                                                }
                                            }
                                            <span class="ms-2">(@response.RatingValue stars)</span>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="response-text p-3 bg-light rounded">
                                        @if (!string.IsNullOrEmpty(response.ResponseText))
                                        {
                                            @response.ResponseText
                                        }
                                        else
                                        {
                                            <em>No response provided</em>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stars {
        font-size: 24px;
    }
</style>