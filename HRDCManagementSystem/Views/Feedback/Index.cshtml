@model HRDCManagementSystem.Models.ViewModels.FeedbackHistoryViewModel

@{
    ViewData["Title"] = "Feedback";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Training Feedback</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <i class="bi bi-info-circle me-2"></i> You can provide feedback for trainings where your registration has been confirmed by an administrator and the training has ended.
                    </div>
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <h6 class="mb-3">Pending Feedback</h6>
                    <div class="table-responsive mb-4">
                        @if (Model.PendingFeedbacks.Any())
                        {
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Training Program</th>
                                        <th>End Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var training in Model.PendingFeedbacks)
                                    {
                                        <tr>
                                            <td>@training.TrainingTitle</td>
                                            <td>@training.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a asp-action="SubmitFeedback" asp-route-trainingRegSysId="@training.TrainingRegSysID" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-chat-dots"></i> Submit Feedback
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                You don't have any pending feedback requests for completed confirmed trainings.
                            </div>
                        }
                    </div>

                    <h6 class="mb-3">Feedback History</h6>
                    <div class="table-responsive">
                        @if (Model.CompletedFeedbacks.Any())
                        {
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Training Program</th>
                                        <th>End Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var training in Model.CompletedFeedbacks)
                                    {
                                        <tr>
                                            <td>@training.TrainingTitle</td>
                                            <td>@training.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a asp-action="ViewMyFeedback" asp-route-trainingRegSysId="@training.TrainingRegSysID" class="btn btn-info btn-sm">
                                                    <i class="bi bi-eye"></i> View Feedback
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                You haven't submitted any feedback yet.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>