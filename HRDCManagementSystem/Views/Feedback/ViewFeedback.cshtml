@model HRDCManagementSystem.Models.ViewModels.ViewFeedbackViewModel

@{
    ViewData["Title"] = "Training Feedback Analysis";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Feedback Analysis: @Model.TrainingTitle</h5>
                    <a asp-controller="Training" asp-action="Details" asp-route-id="@Model.TrainingSysID" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to Training
                    </a>
                </div>
                <div class="card-body">
                    @if (!Model.QuestionSummaries.Any())
                    {
                        <div class="alert alert-info">
                            No feedback has been submitted for this training yet.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Total Feedback Responses: <strong>@(Model.QuestionSummaries.FirstOrDefault()?.ResponseCount ?? 0)</strong>
                        </div>
                        
                        <div class="row">
                            @foreach (var question in Model.QuestionSummaries.Where(q => q.QuestionType == "Rating"))
                            {
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-light">
                                        <div class="card-body">
                                            <h6 class="card-title">@question.QuestionText</h6>
                                            <div class="d-flex align-items-center mt-3">
                                                <div class="stars me-2">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Round(question.AverageRating))
                                                        {
                                                            <i class="bi bi-star-fill text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star text-warning"></i>
                                                        }
                                                    }
                                                </div>
                                                <span>(@question.AverageRating.ToString("F1"))</span>
                                            </div>
                                            
                                            <div class="progress mt-3" style="height: 10px;">
                                                <div class="progress-bar bg-success" role="progressbar" 
                                                     style="width: @((question.AverageRating/5)*100)%;" 
                                                     aria-valuenow="@question.AverageRating" aria-valuemin="0" aria-valuemax="5">
                                                </div>
                                            </div>
                                            <div class="text-muted mt-2">
                                                <small>Based on @question.ResponseCount responses</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <h5 class="mt-4 mb-3">Text Responses</h5>
                        
                        @foreach (var question in Model.QuestionSummaries.Where(q => q.QuestionType == "Text"))
                        {
                            <div class="card mb-4 border-light">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">@question.QuestionText</h6>
                                </div>
                                <div class="card-body">
                                    @if (question.TextResponses.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var response in question.TextResponses)
                                            {
                                                <div class="list-group-item list-group-item-action">
                                                    <div class="d-flex w-100 justify-content-between">
                                                        <p class="mb-1">@response</p>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-muted">
                                            No text responses provided.
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stars {
        font-size: 20px;
    }
</style>