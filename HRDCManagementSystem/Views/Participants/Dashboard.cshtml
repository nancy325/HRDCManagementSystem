@using HRDCManagementSystem.Models
@using HRDCManagementSystem.Models.Participant
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/participantdashboard.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   
    <div class="container-fluid">
        <!-- Header -->
        <div class="dashboard-header">
            <h1 class="h3">Welcome back, John!</h1>
            <p class="mb-0">Ready to continue your learning journey? You have 3 upcoming trainings this month.</p>
        </div>

        <div class="row">
            <!-- Stats Cards -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card total h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Trainings</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar-alt fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card completed h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Completed</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">8</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card progress h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">In Progress</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">2</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-spinner fa-2x text-info"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card stat-card certificates h-100">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Certificates</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">6</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-certificate fa-2x text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Upcoming Trainings -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Upcoming Trainings</h6>
                        <span class="badge bg-primary rounded-pill">3</span>
                    </div>
                    <div class="card-body">
                        <div class="training-item">
                            <h6 class="font-weight-bold">Digital Marketing Fundamentals</h6>
                            <div class="mb-1"><i class="far fa-calendar-alt me-2"></i>Dec 28, 2024 - 9:00 AM - 5:00 PM</div>
                            <div class="mb-1"><i class="fas fa-map-marker-alt me-2"></i>Training Hall A</div>
                            <div><i class="fas fa-user me-2"></i>Dr. Sarah Johnson</div>
                        </div>

                        <div class="training-item">
                            <h6 class="font-weight-bold">Project Management Excellence</h6>
                            <div class="mb-1"><i class="far fa-calendar-alt me-2"></i>Jan 5, 2025 - 10:00 AM - 4:00 PM</div>
                            <div class="mb-1"><i class="fas fa-map-marker-alt me-2"></i>Conference Room B</div>
                            <div><i class="fas fa-user me-2"></i>Fred. Michael Chen</div>
                        </div>

                        <div class="training-item">
                            <h6 class="font-weight-bold">Leadership Development Workshop</h6>
                            <div class="mb-1"><i class="far fa-calendar-alt me-2"></i>Jan 12, 2025 - 9:00 AM - 1:00 PM</div>
                            <div class="mb-2"><i class="fas fa-map-marker-alt me-2"></i>Auditorium</div>
                        </div>

                        <a href="#" class="view-all-btn"><i class="fas fa-arrow-right me-1"></i> View All Trainings</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                
                                <h5 class="card-title">View All Trainings</h5>
                                <p class="card-text">Access all your training materials and history</p>
                                <button class="btn btn-primary">Browse All Trainings</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notifications -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Notifications</h6>
                        <span class="badge bg-danger rounded-pill">3</span>
                    </div>
                    <div class="card-body">
                        <div class="notification-item">
                            <div class="mb-1">Your registration for "Digital Marketing Fundamentals" has been approved</div>
                            <div class="time-indicator"><i class="far fa-clock me-1"></i> 2 hours ago</div>
                        </div>

                        <div class="notification-item">
                            <div class="mb-1">Training 'Digital Marketing Fundamentals' starts tomorrow at 3:00 AM</div>
                            <div class="time-indicator"><i class="far fa-clock me-1"></i> 1 day ago</div>
                        </div>

                        <div class="notification-item">
                            <div class="mb-1">Please provide feedback for completed training 'Data Analytics Basics'</div>
                            <div class="time-indicator"><i class="far fa-clock me-1"></i> 3 days ago</div>
                        </div>

                        <a href="#" class="view-all-btn"><i class="fas fa-arrow-right me-1"></i> View All Notifications</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary btn-sm"><i class="fas fa-search me-2"></i> Find Trainings</button>
                            <button class="btn btn-outline-success btn-sm"><i class="fas fa-download me-2"></i> Download Certificates</button>
                            <button class="btn btn-outline-info btn-sm"><i class="fas fa-question-circle me-2"></i> Get Help</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>