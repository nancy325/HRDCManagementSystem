@using HRDCManagementSystem.Models
@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/participantdashboard.css" rel="stylesheet" />
<!-- Search bar and notifications -->
            <div class="mb-4">
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                    <!-- Search input -->
                    <div class="input-group" style="max-width: 400px; flex:1;">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Search trainings, certificates..." />
                    </div>

                    <!-- Notification bell -->
                    <div class="position-relative">
                        <i class="bi bi-bell" style="font-size: 1.5rem; cursor: pointer;"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3
                        </span>
                    </div>
                </div>
            </div>

            <!-- Welcome banner -->
            <div class="mb-4">
                <div class="welcome-banner">
                    <h4 class="mb-1">Welcome back, Pr!</h4>
                    <div class="small">
                        Ready to continue your learning journey? You have
                        <strong>0</strong> upcoming trainings this month.
                    </div>
                </div>
            </div>

            <!-- Stats row -->
            <div class="row g-3 mb-4">
                <div class="col-6 col-md-3">
                    <div class="stat-card">
                        <div class="label">Total Trainings</div>
                        <div class="value">0</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-card">
                        <div class="label">Completed</div>
                        <div class="value">0</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-card">
                        <div class="label">In Progress</div>
                        <div class="value">0</div>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="stat-card">
                        <div class="label">Certificates</div>
                        <div class="value">0</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Left: Upcoming trainings & participants list -->
                <div class="col-12 col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            Upcoming Trainings
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-0">No upcoming trainings scheduled.</p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span>Participants</span>
                            <span class="text-muted small">Showing 0 participants</span>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-borderless align-middle">
                                    <thead class="table-light">
                                        <tr class="small text-muted">
                                            <th>Name</th>
                                            <th>Course</th>
                                            <th>Training Date</th>
                                            <th>Status</th>
                                            <th>Mode</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td colspan="5" class="text-center text-muted py-4">No participants found</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right: Notifications -->
                <div class="col-12 col-lg-4 mt-4 mt-lg-0">
                    <div class="card h-100 d-flex flex-column">
                        <div class="card-header">
                            Notifications
                        </div>
                        <div class="card-body flex-grow-1 overflow-auto">
                            <div class="small text-muted mb-2">Recent</div>

                            <div class="notification-item">
                                <div class="small">System maintenance scheduled for this weekend.</div>
                                <div class="notification-time">2 hours ago</div>
                            </div>
                            <div class="notification-item">
                                <div class="small">Your certificate for "Advanced Programming" is ready.</div>
                                <div class="notification-time">1 day ago</div>
                            </div>
                            <div class="notification-item">
                                <div class="small">New training "Cloud Computing" has been added.</div>
                                <div class="notification-time">3 days ago</div>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <a href="#" class="small text-decoration-none">View All Notifications</a>
                        </div>
                    </div>
                </div>
            </div>
    