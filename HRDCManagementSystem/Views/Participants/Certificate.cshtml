

@{
    ViewData["Title"] = "My Certificates";
}

<div class="container mt-4">
    <h1 class="mb-3">My Certificates</h1>
    <p class="text-muted">Download and manage your training certificates</p>

    <div class="row">
        @foreach (var cert in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-start border-primary border-3">
                    <div class="card-body">
                        <h5 class="card-title">@cert.TrainingTitle</h5>
                        <div class="mb-2">
                            <span class="badge bg-info">@cert.Category</span>
                            <span class="badge bg-success">Grade: @cert.Grade</span>
                        </div>
                        <p><strong>Issue Date:</strong> @cert.IssueDate</p>
                        <p><strong>Duration:</strong> @cert.Duration</p>
                        <p><strong>Trainer:</strong> @cert.Trainer</p>
                        <p><strong>Valid Until:</strong> @cert.ValidUntil</p>

                        <p class="small text-muted">Certificate Number: @cert.CertificateNumber</p>

                        <p><strong>Skills:</strong></p>
                        <div>
                            @foreach (var skill in cert.Skills)
                            {
                                <span class="badge bg-secondary me-1">@skill</span>
                            }
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <a class="btn btn-primary btn-sm">Download</a>
                            <a class="btn btn-outline-secondary btn-sm">Preview</a>
                            <a class="btn btn-outline-info btn-sm">Share</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
