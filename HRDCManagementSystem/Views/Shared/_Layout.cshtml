@*
    _Layout.cshtml
    ✨ Improved version with modern responsive design and datepicker support
    ⚠️ No backend logic altered
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HRDC Management System</title>
    <link rel="icon" type="image/x-icon" href="~/lib/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- ✅ Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- ✅ Custom CSS -->
    <link href="~/css/layout.css" rel="stylesheet" />

    <!-- ✅ Datepicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- 🌟 Header -->
    <header class="main-header bg-primary text-white shadow-sm py-2">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <!-- Sidebar Toggle (Mobile) -->
            <button class="sidebar-toggle d-lg-none btn btn-light text-primary rounded-circle me-2" id="sidebarToggle" type="button">
                <i class="bi bi-list fs-5"></i>
            </button>

            <!-- Logo & Title -->
            <div class="d-flex align-items-center text-center text-lg-start flex-grow-1 justify-content-center justify-content-lg-start">
                <img src="~/images/charusat-logo.png" alt="HRDC Logo" class="img-fluid" style="height: 45px; width: auto;" />
                <div class="ms-2">
                    <h2 class="mb-0 fw-semibold fs-5 d-none d-lg-block">Human Resource Development Centre</h2>
                    <div class="d-lg-none text-white">
                        <h5 class="mb-0">HR</h5>
                        <small>Development Centre</small>
                    </div>
                </div>
            </div>

            <!-- Notification Bell (for all logged-in users) -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="ms-auto me-3">
                    @await Html.PartialAsync("_NotificationBell")
                </div>
            }
        </div>
    </header>

    <!-- 🧱 Layout Wrapper -->
    <div class="d-flex flex-grow-1">

        <!-- 🧭 Sidebar -->
        <nav id="sidebar" class="sidebar bg-white border-end shadow-sm">
            @if (User.IsInRole("Admin"))
            {
                @await Html.PartialAsync("_SidebarAdmin")
            }
            else if (User.IsInRole("Employee") || User.IsInRole("User") || User.IsInRole("Participants"))
            {
                @await Html.PartialAsync("_SidebarParticipant")
            }
            else
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-exclamation-triangle mb-2 fs-3"></i>
                    <p>No sidebar available for your role.</p>
                </div>
            }
        </nav>

        <!-- 📄 Main Content -->
        <main class="main-content flex-grow-1 p-4">
            <div class="content-wrapper bg-white rounded shadow-sm p-4 mb-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- ⚓ Footer -->
    <footer class="bg-dark text-white text-center py-2 mt-auto small">
        &copy; @DateTime.Now.Year HRDC Management System • All Rights Reserved
    </footer>

    <!-- 📦 Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    
    <!-- 📦 SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    
    <!-- 📦 Notifications Script -->
    <script src="~/js/notifications.js"></script>

    <!-- 🧠 Custom Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Sidebar toggle (for mobile)
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            if (sidebarToggle && sidebar) {
                sidebarToggle.addEventListener('click', () => sidebar.classList.toggle('show'));
            }

            // Initialize Bootstrap Datepickers
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
