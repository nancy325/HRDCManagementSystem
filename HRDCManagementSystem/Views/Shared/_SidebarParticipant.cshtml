@using Microsoft.AspNetCore.Routing
@functions {
    string IsActive(string controller, string action = "Dashboard")
    {
        var routeData = Context.GetRouteData();
        var currentController = routeData.Values["controller"]?.ToString();
        var currentAction = routeData.Values["action"]?.ToString();
        if (string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase) &&
            (action == null || string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase)))
        {
            return "active";
        }
        return "";
    }
}
<link rel="stylesheet" href="~/css/participant-sidebar.css" asp-append-version="true" />

<div class="participant-sidebar">
    <div class="sidebar-content">
        <!-- Logo Section -->
        <div class="logo-container d-flex align-items-center">
            <!-- Logo Image -->
            <div class="main-logo me-2">
                <img src="~/images/hrdc-logo.png" alt="HRDC Logo" style="height:40px; width:auto;" />
            </div>

            <!-- Logo Text -->
            <div class="logo-text">
                <small class="logo-title">HRDC Management System</small>
            </div>
        </div>


        <!-- Navigation Menu -->
        <nav class="participant-nav-container">
            <ul class="participant-nav">
                <li class="participant-nav-item">
                    <a asp-controller="Participants" asp-action="Dashboard"
                       class="participant-nav-link @IsActive("Participants", "Dashboard")">
                        <i class="bi bi-house-door"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="participant-nav-item">
                    <a asp-controller="Participants" asp-action="Trainings"
                       class="participant-nav-link @IsActive("Participants", "Trainings")">
                        <i class="bi bi-journal-text"></i>
                        <span>My Trainings</span>
                    </a>
                </li>
                <li class="participant-nav-item">
                    <a asp-controller="Participants" asp-action="Certificates"
                       class="participant-nav-link @IsActive("Participants", "Certificates")">
                        <i class="bi bi-award"></i>
                        <span>Certificates</span>
                    </a>
                </li>
                <li class="participant-nav-item">
                    <a asp-controller="Participants" asp-action="Notifications"
                       class="participant-nav-link @IsActive("Participants", "Notifications")">
                        <i class="bi bi-bell"></i>
                        <span>Notifications</span>
                        <!-- Notification Badge (optional) -->
                        <span class="notification-badge">3</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- User Profile Section -->
        <div class="user-profile">
            <a asp-controller="Participants" asp-action="Profile"
               class="profile-link @IsActive("Participants", "Profile")">
                <div class="profile-avatar">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div class="profile-info">
                    <span class="profile-name">John Doe</span>
                    <small class="profile-email">john.doe@example.com</small>
                </div>
                <i class="bi bi-chevron-right profile-arrow"></i>
            </a>

            <!-- Logout Button -->
            <button class="logout-btn" onclick="logout()">
                <i class="bi bi-box-arrow-right"></i>
                <span>Sign Out</span>
            </button>
        </div>
    </div>
</div>


<script>
    function logout() {
        if (confirm('Are you sure you want to sign out?')) {
            // Add your logout logic here
            window.location.href = '/Account/Logout';
        }
    }
</script>