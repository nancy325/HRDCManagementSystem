@using Microsoft.AspNetCore.Routing
@functions {
    string IsActive(string controller, string action = "Dashboard")
    {
        var routeData = Context.GetRouteData();
        var currentController = routeData.Values["controller"]?.ToString();
        var currentAction = routeData.Values["action"]?.ToString();
        if (string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase) &&
            (action == null || string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase)))
        {
            return "active";
        }
        return "";
    }
}
<link rel="stylesheet" href="~/css/participant-sidebar.css" asp-append-version="true" />

<!-- Sidebar -->
<div class="participant-sidebar" id="participantSidebar">
    <div class="sidebar-content">
        <!-- Logo Section -->
        <div class="logo-container d-flex justify-content-center align-items-center">
            <div class="main-logo">
                <img src="~/images/hrdc-logo.png" alt="HRDC Logo" class="sidebar-logo" />
            </div>
        </div>

        <!-- Navigation Menu -->
        <nav class="participant-nav-container flex-grow-1">
            <ul class="participant-nav">
                <li class="participant-nav-item">
                    <a asp-controller="Employee" asp-action="Dashboard"
                       class="participant-nav-link @IsActive("Employee", "Dashboard")">
                        <i class="bi bi-house-door"></i><span>Dashboard</span>
                    </a>
                </li>
                <li class="participant-nav-item">
                    <a asp-controller="Training" asp-action="TrainingIndex"
                       class="participant-nav-link @IsActive("Training", "TrainingIndex")">
                        <i class="bi bi-journal-text"></i><span>Available Trainings</span>
                    </a>
                </li>
                <li class="participant-nav-item">
                    <a asp-controller="TrainingRegistration" asp-action="MyRegistrations"
                       class="participant-nav-link @IsActive("TrainingRegistration", "MyRegistrations")">
                        <i class="bi bi-journal-check"></i><span>My Registrations</span>
                    </a>
                </li>
                <li class="participant-nav-item">
                    <a asp-controller="Employee" asp-action="Certificates"
                       class="participant-nav-link @IsActive("Employee", "Certificates")">
                        <i class="bi bi-award"></i><span>Certificates</span>
                    </a>
                </li>
                <li class="participant-nav-item">
                    <a asp-controller="Employee" asp-action="Profile"
                       class="participant-nav-link @IsActive("Employee", "Profile")">
                        <i class="bi bi-person-circle"></i><span>My Profile</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- User Profile Section -->
        <div class="user-profile">
            <a asp-controller="Employee" asp-action="Profile"
               class="profile-link @IsActive("Employee", "Profile")">
                <div class="profile-avatar"><i class="bi bi-person-circle"></i></div>
                <div class="profile-info">
                    <span class="profile-name">@User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value</span>
                    <small class="profile-email">@User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value</small>
                </div>
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="logout-btn">
                    <i class="bi bi-box-arrow-right"></i><span>Sign Out</span>
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Toggle Button (Visible on Mobile) -->
<button class="sidebar-toggle d-lg-none" onclick="toggleSidebar()">
    <i class="bi bi-list"></i>
</button>

<script>
    function toggleSidebar() {
        document.getElementById("participantSidebar").classList.toggle("open");
    }
</script>
